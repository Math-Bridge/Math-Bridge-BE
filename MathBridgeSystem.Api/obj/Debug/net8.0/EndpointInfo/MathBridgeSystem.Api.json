  "components": {
    "schemas": {
      "GoogleLoginRequest": {
        "required": [
          "IdToken"
        ],
        "type": "object",
        "properties": {
          "IdToken": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "required": [
          "Email",
          "Password"
        ],
        "type": "object",
        "properties": {
          "Email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "Password": {
            "maxLength": 255,
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegisterRequest": {
        "required": [
          "Email",
          "FullName",
          "Gender",
          "Password",
          "PhoneNumber",
          "RoleId"
        ],
        "type": "object",
        "properties": {
          "FullName": {
            "maxLength": 255,
            "minLength": 1,
            "type": "string"
          },
          "Email": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string",
            "format": "email"
          },
          "Password": {
            "maxLength": 255,
            "minLength": 6,
            "type": "string"
          },
          "PhoneNumber": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "format": "tel"
          },
          "Gender": {
            "minLength": 1,
            "pattern": "^(male|female|other)$",
            "type": "string"
          },
          "RoleId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "UpdateStatusRequest": {
        "required": [
          "Status"
        ],
        "type": "object",
        "properties": {
          "Status": {
            "minLength": 1,
            "pattern": "^(active|banned)$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateUserRequest": {
        "required": [
          "FullName",
          "Gender",
          "PhoneNumber"
        ],
        "type": "object",
        "properties": {
          "FullName": {
            "maxLength": 255,
            "minLength": 1,
            "type": "string"
          },
          "PhoneNumber": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "format": "tel"
          },
          "Gender": {
            "minLength": 1,
            "pattern": "^(male|female|other)$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "VerifyRequest": {
        "required": [
          "Code",
          "Email"
        ],
        "type": "object",
        "properties": {
          "Email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "Code": {
            "maxLength": 6,
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Enter your JWT token in the format: Bearer {your token here}",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}